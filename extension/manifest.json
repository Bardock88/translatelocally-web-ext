{
	"manifest_version": 2,
	"name": "Bergamot Translations",
	"version": "0.0.1",
	"version_name": "development",
	"browser_specific_settings":
	{
		"gecko":
		{
			"strict_min_version": "90.0",
			"id": "{c9cdf885-0431-4eed-8e18-967b1758c951}"
		}
	},
	"permissions":
	[
		"<all_urls>",
		"contextMenus",
		"tabs",
		"webNavigation",
		"storage",
		"nativeMessaging"
	],
	"background":
	{
		"scripts":
		[
			"controller/translation/compat.js",
			"3rd_party/pako/pako_inflate.js",
			"3rd_party/js-untar/untar.js",
			"controller/translation/func.js",
			"controller/translation/promise.js",
			"controller/translation/yaml.js",
			"controller/translation/TLTranslationHelper.js",
			"controller/translation/WASMTranslationHelper.js",
			"controller/backgroundScript.js"
		]
	},
	"content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
	"content_scripts":
	[
		{
			"matches":
			[
				"<all_urls>"
			],
			"js":
			[
				"controller/translation/compat.js",
				"controller/LanguageDetection.js",
				"view/js/InPageTranslation.js",
				"contentScript.js"
			],
			"css":
			[
				"view/InPageTranslation.css"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"incognito": "spanning",
	"browser_action":
	{
		"browser_style": true,
		"default_icon":
		{
			"19": "/view/icons/translation.16x16.png",
			"38": "/view/icons/translation.32x32.png"
		},
		"default_title": "Translation available",
		"default_popup": "/view/static/popup.html"
	},
	"options_ui": {
		"page": "/view/static/options.html",
		"browser_style": true,
		"chrome_style": true
	},
	"icons":
	{
		"16": "/view/icons/translation.16x16.png",
		"32": "/view/icons/translation.32x32.png"
	},
	"web_accessible_resources": [
		"view/fonts/FlowBlock-Regular.woff2",
		"view/fonts/FlowCircular-Regular.woff2",
		"view/fonts/FlowRounded-Regular.woff2",
		"view/static/benchmark.html",
		"view/static/benchmark.js",
		"view/static/benchmark.css",
		"view/static/test.html",
		"view/static/test.js",
		"view/js/InPageTranslation.js",
		"3rd_party/pako/pako_inflate.js",
		"3rd_party/js-untar/untar.js",
		"controller/translation/compat.js",
		"controller/translation/func.js",
		"controller/translation/promise.js",
		"controller/translation/yaml.js",
		"controller/translation/TLTranslationHelper.js",
		"controller/translation/WASMTranslationHelper.js",
		"controller/translation/WASMTranslationWorker.js",
		"controller/translation/bergamot-translation-worker.js",
		"controller/translation/bergamot-translation-worker.wasm"
	],
	"description": "Experimental Bergamot Translations translates any webpage utilizing client based machine learning algorithms and models.",
	"homepage_url": "https://github.com/jelmervdl/firefox-translations"
}